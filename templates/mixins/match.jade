include meetup-talk

mixin match(match)

	- var today = new Date();

	.tile.ph-1.pv-1
		.match-calendar.calendar.hidden-xs.hidden-sm(class=match.state == 'past' ? 'calendar--past' : null)
			.calendar__header=match._.meetingTime.format('MMM')
			.calendar__body
				.calendar__date=match._.meetingTime.format('DD')
				.calendar__year=match._.meetingTime.format('YYYY')
		.match-content
			h2.mv-5= match.opponent
			h5.mb-1=match._.meetingTime.format('dddd D MMM YYYY')
				|  at #{match._.meetingTime.format('h:mma')}
			if match.description
				p!= match.description
			if match.attendances.length
				hr.mv-2
				ul.match-talks
					each attendance in match.attendances
						+meetup-talk(attendance)

		if match.state == 'active'
			hr.mv-2
			.match-cta
				if user
					if match.rsvpsAvailable
						h4.hero-button-title
							if !rsvpStatus.rsvped && rsvpStatus.attending
								span RSVP Confirmed!
							else
								span Are you coming?&nbsp;
								span.text-thin (#{plural(match.remainingRSVPs, '* spot left', '* spots left')})

						include ../includes/match-attendance-toggle
					else
						.alert.alert-success.mb-0.text-center No more tickets&hellip;

				else
					#next-match(data-id=match.id)
						if match.rsvpsAvailable
							a(href='/join', data-from=page.path).btn.btn-primary.btn-lg.btn-block.js-auth-trigger RSVP Now 
								span.text-thin (#{plural(match.remainingRSVPs, '* spot left', '* spots left')})
						else
							.alert.alert-success.mb-0.text-center No more tickets&hellip;

		else if match.totalRSVPs
			hr
			.text-center
				.h1.text-muted.mb-0= match.totalRSVPs
				.lead.text-muted people #{match.state == 'active' ? "are attending" : "attended"} this match
			if match.state == 'past'
				ul.list-unstyled.list-inline.text-center
					for rsvp in match.rsvps
						if rsvp.who
							- var attendee = rsvp.who;
							if attendee.isPublic
								li: a(href=attendee.url, title=attendee.name.full)
									img(src=attendee.photo.exists ? attendee._.photo.thumbnail(80,80) : attendee.avatarUrl || '/images/avatar.png', width=40, height=40, alt=attendee.name.full).img-circle
							else
								li(title=attendee.name.full): img(src=attendee.photo.exists ? attendee._.photo.thumbnail(80,80) : attendee.avatarUrl || '/images/avatar.png', width=40, height=40, alt=attendee.name.full).img-circle
